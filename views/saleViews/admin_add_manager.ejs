<div class="row">
  <h1 style="text-align: center; color: #08A650"><%=title%></h1>
  <div class="col-xs-12">
    <hr>
    <div class="row">
      <div class="col-xs-3 col-xs-offset-1 manager-label manager-field">
        <label for="">Họ tên:</label>
      </div>
      <div class="col-xs-6 manager-field">
        <form><div class="form-group"><input class="form-control" type="text" name="name" placeholder="Đầy đủ họ và tên"></div></form>
      </div>
      <div class="col-xs-3 col-xs-offset-1 manager-label manager-field">
        <label for="">Email:</label>
      </div>
      <div class="col-xs-6 manager-field">
        <form><div class="form-group"><input class="form-control" type="text" name="email"></div></form>
      </div>
      <div class="col-xs-3 col-xs-offset-1 manager-label manager-field">
        <label for="">Chức vụ:</label>
      </div>
      <div class="col-xs-6 manager-field">
        <form><div class="form-group"><input class="form-control" type="text" name="position"></div></form>
      </div>
      <div class="col-xs-3 col-xs-offset-1 manager-label manager-field">
        <label for="">Tên đăng nhập:</label>
      </div>
      <div class="col-xs-6 manager-field">
        <form><div class="form-group"><input class="form-control" type="text" name="username" placeholder="Duy nhất! (email)"></div></form>
      </div>
      <div class="col-xs-3 col-xs-offset-1 manager-label manager-field">
        <label for="">Mật khẩu:</label>
      </div>
      <div class="col-xs-6 manager-field">
        <form><div class="form-group"><input class="form-control" type="password" name="password"></div></form>
      </div>
      <div class="col-xs-3 col-xs-offset-1 manager-label manager-field">
        <label for="">Nhập lại mật khẩu:</label>
      </div>
      <div class="col-xs-6 manager-field">
        <form><div class="form-group"><input class="form-control" type="password" name="passwordRe"></div></form>
      </div>
      <div class="col-xs-9 col-xs-offset-5 manager-field"><label id="validate_message"></label></div>
      <div class="col-xs-2 col-xs-offset-5 manager-field">
        <button type="button" class="btn btn-primary save-new-manager-button" name="update">Lưu</button>
      </div>
      <div class="col-xs-2 manager-field">
        <a href="/admin/managers" type="button" class="btn btn-danger cancel-new-manager-button" name="remove">Thoát</a>
      </div>
    </div>
    <hr>
  </div>
</div>
