<div class="row">
  <h1 style="text-align: center; color: #08A650"><%= right.title %></h1>
  <div class="col-xs-8 col-xs-offset-2">
    <div class="input-group">
      <span class="input-group-addon">Tên chính sách giá:</span>
      <input class="form-control" type="text" name="" id="new_price_policy_name" placeholder="Tên duy nhất, không được trùng với bất cứ tên chính sách giá nào khác">
    </div>
  </div>
  <div class="col-xs-12">
    <hr>
    <% data.forEach(function(item){ %>
      <div class="row">
        <div class="col-xs-12 col-sm-3 manager-label manager-field">
          <h1 class="yellow"><%= item.productLineName %></h1>
        </div>
      </div>
      <div class="row">
        <%- include("products_in_policy", {products: item.products});%>
      </div>
      <hr>
    <%})%>
  </div>
  <div  class="col-xs-12">
    <h4 style="">Lưu ý: chỉ những sản phẩm được điền giá và ở trạng thái đã <span class="text-success">được kích hoạt (màu xanh)</span> mới được hiện cho Nhà phân phối đặt hàng</h4>
    <h3 id="new_price_policy_message" style="color: red;"></h3>
    <div class="row">
      <div class="col-xs-1">
        <button class="btn btn-success" id="save_new_price_policy">Lưu</button>
      </div>
      <div class="col-xs-1">
        <a href="/admin/price-policy" class="btn btn-warning">Bỏ qua</a>
      </div>
    </div>
  </div>
  <hr>
</div>
